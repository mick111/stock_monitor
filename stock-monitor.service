[Unit]
Description=Surveillance stock multi-pages (run scheduler tick)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/home/pi/Projects/stock_monitor
EnvironmentFile=-/home/pi/Projects/stock_monitor/monitor.env
EnvironmentFile=-/home/pi/Projects/stock_monitor/smtp.env
ExecStart=/home/pi/Projects/stock_monitor/run_monitor_once.sh
User=pi
Group=pi

